<section class="row">
  <div class="col s6">
    <h2>Edit Post</h2>

    <form class="edit-post-form">
      <div class="form-group">
        <input class="post-title" type="text" value="{{post.title}}" />
      </div>
      <div class="form-group">
        <textarea class="post-body">{{post.body}}</textarea>
      </div>
    <button class="btn btn-primary" type="submit">Update Post</button>
    <button class="btn btn-primary" id="delete-btn">Delete Post</button>
    </form>
  </div>
</section>  

<script src="/js/edit.js"></script>